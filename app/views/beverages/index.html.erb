

<div style="display: flex; align-items: center; justify-content: center; margin: 20px;" class="shadow-lg">
  <div class="container">
    <div class="row">
      <h2 style="text-align: center;">Welcome! Please select your order</h2>
      <% @beverages.each do |b| %>
        <div class="col-lg-4 d-flex align-items-stretch p-3">
          <div class="card shadow-lg border-success" style="width: 18rem;">
            <%= image_tag "coffee.jpg", class: "card-img-top"%>
            <div class="card-body">
              <h5 class="card-title"><%= b.name %></h5>
              <p class="card-text"><%= b.description %></p>
              <% if b.available %>
                <a class="btn btn-primary" id="<%= b.name %>" onclick="PlaceOrder(this)">Buy</a>
              <% else %>
                <a class="btn btn-danger" id="<%= b.name %>" onclick="PlaceOrder(this)">Unavailable</a>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="d-grid gap-2 col-6 mx-auto m-2">
      <a href="/ingredients" class="btn btn-outline-dark" type="button">Add Ingredients</a>
    </div>
  </div>
</div>

